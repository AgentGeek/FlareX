<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FlareX" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>


        <item name="fontFamily">@font/lato_regular</item>
        <item name="android:statusBarColor" >@color/black</item>
        <item name="android:progressBarStyle">@style/Theme.FlareX.Progress</item>
        <item name="switchStyle">@style/Theme.FlareX.Switch</item>
        <item name="materialButtonStyle">@style/Theme.FlareX.Button</item>
        <item name="chipStyle">@style/Theme.FlareX.Chip</item>
        <item name="tabStyle">@style/Theme.FlareX.Tab</item>
        <item name="recyclerViewStyle">@style/Theme.FlareX.RecyclerView</item>
        <item name="android:scrollViewStyle">@style/Theme.FlareX.RecyclerView</item>
        <!-- Custom -->
        <item name="iconColor">@color/white</item>
        <item name="titleColor">@color/secondary</item>
        <item name="chartTextColor">@color/white</item>
    </style>

    <!-- EditText -->
    <style name="Theme.FlareX.TextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/box_outlined_edit_text</item>
        <item name="strokeColor">@color/secondary</item>
        <item name="hintTextColor">@color/white</item>
        <item name="endIconTint">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="boxStrokeErrorColor">@color/error</item>
    </style>

    <!-- Tabs -->
    <style name="Theme.FlareX.Tab" parent="Widget.MaterialComponents.TabLayout.PrimarySurface">
        <item name="tabIndicatorColor">@color/secondary</item>
        <item name="tabTextColor">@color/tab_text</item>
    </style>

    <!-- Switch -->
    <style name="Theme.FlareX.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="materialThemeOverlay">@style/ThemeOverlay.FlareX.Switch</item>
    </style>
    <style name="ThemeOverlay.FlareX.Switch" parent="">
        <item name="colorOnSurface">@color/divider</item>
        <item name="colorSecondary">@color/secondary</item>
    </style>

    <!-- Progress -->
    <style name="Theme.FlareX.Progress" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@color/secondary</item>
    </style>
    <style name="Theme.FlareX.Progress.Horizontal" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:indeterminateTint">@color/secondary</item>
    </style>

    <!-- Title -->
    <style name="Theme.FlareX.Title" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?attr/titleColor</item>
    </style>

    <!-- Code -->
    <style name="Theme.FlareX.Code" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/hack_regular</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Text Divider -->
    <style name="Theme.FlareX.TextDivider" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">@drawable/bg_text_divider</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">3dp</item>
    </style>

    <!-- Button -->
    <style name="Theme.FlareX.Button" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/secondary</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Theme.FlareX.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/secondary</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <!-- Chip -->
    <style name="Theme.FlareX.Chip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipBackgroundColor">@color/background_chip</item>
        <item name="android:textColor">@color/text_chip</item>
    </style>

    <style name="Theme.FlareX.Transparent" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!-- Bottom Sheet -->
    <style name="Theme.FlareX.BottomSheet" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/Theme.FlareX.BottomSheetCorner</item>
    </style>
    <style name="Theme.FlareX.BottomSheetCorner" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">12dp</item>
        <item name="cornerSizeTopLeft">12dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <!-- Recycler View -->
    <style name="Theme.FlareX.RecyclerView">
        <item name="android:requiresFadingEdge">vertical</item>
        <item name="android:fadingEdgeLength">10dp</item>
    </style>

    <!--
        AMOLED VERSION
    -->
    <style name="Theme.FlareX.Amoled" parent="Theme.FlareX">
        <item name="android:windowBackground">@color/black</item>

        <item name="cardBackgroundColor">@color/background_card</item>
        <item name="tabStyle">@style/Theme.FlareX.Amoled.Tab</item>
        <item name="bottomNavigationStyle">@style/Theme.FlareX.Amoled.BottomNav</item>
        <!--<item name="toolbarStyle">@style/Theme.FlareX.Amoled.Toolbar</item>-->
    </style>

    <style name="Theme.FlareX.Amoled.Tab" parent="Theme.FlareX.Tab">
        <item name="tabBackground">@color/black</item>
    </style>

    <style name="Theme.FlareX.Amoled.BottomNav" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="backgroundTint">@color/black</item>
    </style>

</resources>