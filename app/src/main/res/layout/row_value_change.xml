<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="2dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/secondary"
        android:layout_marginEnd="4dp"
        android:id="@+id/value_label"/>

    <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1" android:id="@+id/spacer"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/old_value"/>

    <ImageView
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_gravity="center"
        android:contentDescription="@string/cd_divider"
        android:layout_marginHorizontal="6dp"
        android:src="@drawable/ic_arrow_right"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/new_value"/>

</LinearLayout>